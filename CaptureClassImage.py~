import cv2
import time

cap = cv2.VideoCapture(0)


while True:
	ret, img = cap.read()                                                       # reading the camera input
	cv2.waitKey(100)                                                        # waiting time of  milisecond  
	break;
cv2.imwrite("Hello.jpg",img)

cap.release() 

        
cv2.destroyAllWindows()
                                                                  # turning the webcam off

